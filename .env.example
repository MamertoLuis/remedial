# ==============================================================================
# Django Environment Configuration Template
# ==============================================================================
# Copy this file to .env and update the values for your environment
# DO NOT commit the actual .env file to version control!

# ------------------------------------------------------------------------------
# Core Django Settings
# ------------------------------------------------------------------------------
# Set to True for development, False for production
DEBUG=False

# A secret key used for cryptographic signing. Keep this secure!
# Generate a new one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-change-this-in-production-to-a-long-random-string

# Comma-separated list of host/domain names that this site can serve
# Example: example.com,www.example.com,127.0.0.1
ALLOWED_HOSTS=127.0.0.1,localhost

# Comma-separated list of trusted origins for CSRF protection
# Required if your site is accessed via HTTPS or behind a proxy
# Example: https://example.com,https://www.example.com
CSRF_TRUSTED_ORIGINS=https://127.0.0.1,https://localhost

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
# Database URL format: engine://user:password@host:port/name
# SQLite (default): sqlite:///db.sqlite3
# PostgreSQL: postgres://user:password@host:port/dbname
# MySQL: mysql://user:password@host:port/dbname
DATABASE_URL=sqlite:///db.sqlite3

# ------------------------------------------------------------------------------
# Security Settings (Production Only)
# ------------------------------------------------------------------------------
# Enable these in production when serving over HTTPS
SECURE_BROWSER_XSS_FILTER=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True

# ------------------------------------------------------------------------------
# Email Configuration
# ------------------------------------------------------------------------------
# The backend to use for sending emails
# Console (dev): django.core.mail.backends.console.EmailBackend
# SMTP (prod): django.core.mail.backends.smtp.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP Server Settings
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# SMTP Authentication
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=your-email@example.com

# ------------------------------------------------------------------------------
# AllAuth Settings
# ------------------------------------------------------------------------------
# Set to 'https' in production, 'http' in development
ACCOUNT_DEFAULT_HTTP_PROTOCOL=https